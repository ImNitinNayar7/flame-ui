<div class="flex-scaffholding -column">
    {{#sd-panel-header}}
        <h1 class="title">
            Logs for
            {{#sd-tabs-list}}
                {{#sd-tab-item}}
                    <button {{action "selectMode" 'SPAN'}}>this span only</button>
                {{/sd-tab-item}}
                {{#sd-tab-item}}
                    <button {{action "selectMode" 'SPAN_CHILD'}}>this span and childs</button>
                {{/sd-tab-item}}
            {{/sd-tabs-list}}
        </h1>
    {{/sd-panel-header}}

    {{#sd-panel-content class="flex-grow -no-padding"}}
        <table class="table">
            <thead class="thead">
                <th class="th -icon"></th>
                <th class="th -string">Container Name</th>
                <th class="th -string">K</th>
                <th class="th -number">Date and Time</th>
                <th class="th -string" colspan="3">Message</th>
            </thead>
            <tbody class="tbody">
                {{#each log key="@index" as |line|}}
                    <tr class="tr" style="color:{{line.col}}">
                        <td class="td -icon"><i class="material-icons" style="color:{{line.contCol}}">lens</i></td>
                        <td class="td -string">{{line.containerName}}</td>
                        <td class="td -string">{{line.k}}</td>
                        <td class="td -number">{{line.t}}</td>
                        <td class="td -string" colspan="3">{{line.b}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/sd-panel-content}}
</div>
